<%= render "shared/nav" %>
<section class="header">
	<div class="wrap">
		<h1 class="headline">webkit.io</h1>
		<h2 class="tagline">a toolkit for web developers</h2>
	</div>
</section>


<section class="body">
	<div class="home-wrap">

		<% for tool in @tools %>
			<div class="block">
				<h3 class="h3"><%= tool.title %></h3>
				<p><%= tool.desc %></p>
				<p><%= tool.tags %></p>
				<div class="btn btn-small">
					<%= link_to "View", tool %>
				</div>
			</div>
		<% end %>

		<% for code in @codes %>
			<div class="block">
				<h3 class="h3"><%= code.name %></h3>
				<div class="btn btn-small">
					<%= link_to "View", code %>
				</div>
			</div>
		<% end %>
	</div>

</section>