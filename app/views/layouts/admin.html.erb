<!DOCTYPE html>
<% if content_for?(:html) %>
	<%= yield(:html) %>
<% else %>
	<html>
<% end %>
<head>
<title><%= yield(:title) %></title>
  <link rel="stylesheet" href="/assets/admin/main.css" />
  <%= javascript_include_tag "application" %>
  <script src="/assets/admin/main.js" type="text/javascript"></script>

  <%= csrf_meta_tags %>

<script>
$(function(){
    // Form preview ajax
    var form = $("#code-form form");
    $(".code-preview").click(function (){
        $.ajax({
          type: "POST",
          url: "<%= admin_codes_preview_path %>",
          headers: { 'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content') },
          data: $(form).serialize(),
          dataType: "html",
          success: function(data){
                $(".result").html(data);
              }
        });
        $(".result-wrap").addClass("result-active");
    });
    $(".close-preview").click(function(){
      $(".result-wrap").removeClass("result-active");
    });
    $(document).keyup(function(e) {
    if (e.keyCode == 13) { $(".result-wrap").removeClass("result-active"); }     // enter
    if (e.keyCode == 27) { $(".result-wrap").removeClass("result-active"); }   // esc
  });
});
</script>

  <%= yield :head %>

<!-- Mobile browser viewport -->
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>
<body>
<%= render "admin/nav" %>

<div class="wrap">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
</div>

<%= yield %>


</body>
</html>
