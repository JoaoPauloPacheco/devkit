<div class="tag-cloud">
	<ul>

		<p>Current Tags</p>
			<% @params.each do |tag| %>

				<% if @params.length > 1 %>
					<li>
						<%= link_to tag.gsub("-", " ").upcase, code_tag_path(tag) %> |
						<%= link_to "-", code_tag_path(params[:tag].gsub(tag, "")).gsub("//", "/") %>
					</li>
				<% else %>
					<li>
						<%= link_to tag.gsub("-", " ").upcase, code_tag_path(tag) %>
					</li>
				<% end %>

			<% end %>

		<p>Add Tags</p>
			<% @tags.each do |tag| %>

				<% if @tags.length > 1 %>
					<li>
						<%= link_to tag.gsub("-", " ").upcase, code_tag_path(tag) %> |
						<%= link_to "+", code_tag_path(params[:tag]+"/"+tag) %>
					</li>
				<% else %>
					<li>
						<%= link_to tag.gsub("-", " ").upcase, code_tag_path(tag) %>
					</li>
				<% end %>

			<% end %>

	</ul>
</div>